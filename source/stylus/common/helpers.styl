.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  +above($breakpoints.sm)
    max-width: 720px
    margin: 0 auto
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 970px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1220px

section
  font-size: 15px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 14px
  +above($breakpoints.md)
    font-size: 15px
  +above($breakpoints.xxl)
    font-size: 18px

h1,
h2,
h3,
h4
  font-family: "Gilroy-Bold"
  font-weight: 700
  text-transform: uppercase

.d-flex
  display: flex
.d-block
  display: block
.d-i-block
  display: inline-block
.d-inline
  display: inline
.d-none
  display: none

.color-white
  color: $color-white
.color-black
  color: $color-black
.color-blue-1
  color: $color-blue-1
.color-orange-1
  color: $color-orange-1

.font-g-reg
  font-family: "Gilroy-Regular"
  font-weight: 400
.font-g-med
  font-family: "Gilroy-Medium"
  font-weight: 500
.font-g-s-bold
  font-family: "Gilroy-Semibold"
  font-weight: 600
.font-g-bold
  font-family: "Gilroy-Bold"
  font-weight: 700

.font-s-12
  font-size: 10px
  line-height: 140%
  +above($breakpoints.md)
    font-size: 11px
  +above($breakpoints.xxl)
    font-size: 12px
.font-s-14
  font-size: 11px
  line-height: normal
  +above($breakpoints.md)
    font-size: 13px
  +above($breakpoints.xxl)
    font-size: 14px
.font-s-16
  line-height: 110%
  font-size: 15px
  +above($breakpoints.sm)
    font-size: 13px
  +above($breakpoints.md)
    font-size: 14px
  +above($breakpoints.xxl)
    font-size: 16px
.font-s-18
  font-size: 15px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 14px
  +above($breakpoints.md)
    font-size: 15px
  +above($breakpoints.xxl)
    font-size: 18px
.font-s-20
  font-size: 15px
  line-height: normal
  +above($breakpoints.md)
    font-size: 17px
  +above($breakpoints.xxl)
    font-size: 20px
.font-s-22
  font-size: 16px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 16px
  +above($breakpoints.md)
    font-size: 18px
  +above($breakpoints.xxl)
    font-size: 22px
.font-s-24
  font-size: 17px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 17px
  +above($breakpoints.md)
    font-size: 20px
  +above($breakpoints.xxl)
    font-size: 24px
.font-s-26
  font-size: 18.5px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 18px
  +above($breakpoints.md)
    font-size: 22px
  +above($breakpoints.xxl)
    font-size: 26px
.font-s-28
  font-size: 19px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 19px
  +above($breakpoints.md)
    font-size: 23px
  +above($breakpoints.xxl)
    font-size: 28px
.font-s-30
  font-size: 20px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 19.5px
  +above($breakpoints.md)
    font-size: 24px
  +above($breakpoints.xxl)
    font-size: 30px
.font-s-32
  font-size: 20px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 21px
  +above($breakpoints.md)
    font-size: 26px
  +above($breakpoints.xxl)
    font-size: 32px
.font-s-35
  font-size: 22px
  line-height: 130%
  +above($breakpoints.sm)
    font-size: 23px
  +above($breakpoints.md)
    font-size: 28px
  +above($breakpoints.xxl)
    font-size: 35px
.font-s-40
  font-size: 21px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 26px
  +above($breakpoints.md)
    font-size: 32px
  +above($breakpoints.xxl)
    font-size: 40px

.text-up
  text-transform: uppercase
.text-init
  text-transform: initial
.text-center
  text-align: center
.text-left
  text-align: left
.text-right
  text-align: right
.text-ital
  font-style: italic
.text-bold
  font-weight: bold

.tap-color
  -webkit-tap-highlight-color: transparent
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none

.border-r-16
  border-radius: 12px
  +above($breakpoints.md)
    border-radius: 14px
  +above($breakpoints.xxl)
    border-radius: 16px
.border-r-20
  border-radius: 14px
  +above($breakpoints.md)
    border-radius: 18px
  +above($breakpoints.xxl)
    border-radius: 20px
