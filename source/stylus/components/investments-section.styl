.investments-section
  background-image: url('../images/investments-bg.jpg')
  background-repeat: no-repeat
  background-position: top center
  background-size: cover
  background-color: $color-orange-1
  color: $color-blue-1

  &__inner
    padding: 50px 0
    +above($breakpoints.sm)
      padding: 60px 0 70px 0
    +above($breakpoints.md)
      padding: 80px 0 90px 0
    +above($breakpoints.xxl)
      padding: 105px 0 137px 0

  &__title
    margin: 0 0 14px 0
    +above($breakpoints.md)
      margin: 0 0 22px 0
    +above($breakpoints.xxl)
      margin: 0 0 35px 0

  &__info
    margin: 0 0 12px 0
    +above($breakpoints.md)
      margin: 0 0 14px 0
    +above($breakpoints.xxl)
      margin: 0 0 17px 0

  &__pointer
    margin: 0 0 20px 0
    +above($breakpoints.md)
      margin: 0 0 32px 0
    +above($breakpoints.xxl)
      margin: 0 0 54px 0
    img
      margin: 0 auto
      height: auto
      width 30px
      +above($breakpoints.md)
        width 40px
      +above($breakpoints.xxl)
        width 56px

  &__cards
    width 260px
    margin: 0 auto
    +above($breakpoints.sm)
      width unset
      margin: 0

  &__cards-list
    +above($breakpoints.sm)
      display: flex
      justify-content: space-between

  &__cards-item
    +above($breakpoints.sm)
      width auto !important
