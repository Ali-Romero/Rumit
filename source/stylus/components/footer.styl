.footer
  position: relative
  z-index 3
  color: $color-white
  background: #1B1B1B
  line-height: 120%
  font-size: 15px
  +above($breakpoints.md)
    font-size: 16px
  +above($breakpoints.xxl)
    font-size: 18px

  &__row
    margin: 0 0 0 auto
    padding: 24px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      display: flex
      justify-content: space-between
      align-items: center
      padding: 16px 0
    +above($breakpoints.md)
      padding: 24px 0
    +above($breakpoints.xxl)
      padding: 26px 0

  &__col
    margin: 0 0 20px 0
    +above($breakpoints.sm)
      margin: 0
    &:last-child
      margin: 0
    &:first-child
      +above($breakpoints.sm)
        display: flex
        align-items: center

  &__logo
    img
      height: auto
      width 114px
      border-radius: 10px
      margin: 0 auto
      +above($breakpoints.sm)
        margin: 0
        width 120px
      +above($breakpoints.md)
        width 140px
      +above($breakpoints.xxl)
        width 181px

  &__connection
    display: flex
    justify-content: center

  &__privacy
    text-decoration: underline;
    text-decoration-skip-ink: none;