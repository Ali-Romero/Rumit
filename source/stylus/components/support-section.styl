.support-section
  &__inner
    padding: 20px 0 0 0
    position relative
    z-index 1
    +above($breakpoints.sm)
      padding: 28px 0
    +above($breakpoints.md)
      padding: 36px 0 80px 0
    +above($breakpoints.xxl)
      padding: 60px 0 130px 0

  &__image
    +above($breakpoints.sm)
      position: absolute
      z-index 1
      pointer-events: none
      bottom: 0
      right -62px
    +above($breakpoints.md)
      right -177px
    +above($breakpoints.xxl)
      right -517px
    img
      height: auto
      width 100%
      +above($breakpoints.sm)
        width 370px
      +above($breakpoints.md)
        width 546px
      +above($breakpoints.xxl)
        width 974px

  &__title
    margin: 0 0 44px 0
    +above($breakpoints.sm)
      margin: 0 0 40px 0
    +above($breakpoints.md)
      margin: 0 0 60px 0
    +above($breakpoints.xxl)
      margin: 0 0 81px 0

  &__content
    +above($breakpoints.sm)
      width 542px
    +above($breakpoints.md)
      width 644px
    +above($breakpoints.xxl)
      width 829px

  &__info
    width 280px
    margin: 0 auto 40px auto
    +above($breakpoints.sm)
      width unset
      margin: 0 0 40px 0
    +above($breakpoints.md)
      margin: 0 0 60px 0
    +above($breakpoints.xxl)
      margin: 0 0 80px 0

  &__info-progress
    width 210px !important
    margin: 14px auto 0 auto !important

  &__info-list
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 20px 34px
    +above($breakpoints.md)
      gap: 30px 52px
    +above($breakpoints.xxl)
      gap: 41px 84px

  &__info-item
    +above($breakpoints.sm)
      width auto !important
      &:nth-child(1)
        order: 1
      &:nth-child(2)
        order: 3
      &:nth-child(3)
        order: 5
      &:nth-child(4)
        order: 7
      &:nth-child(5)
        order: 9
      &:nth-child(6)
        order: 2
      &:nth-child(7)
        order: 4
      &:nth-child(8)
        order: 6
      &:nth-child(9)
        order: 8
    &:nth-child(5),
    &:nth-child(9)
      .support-section__info-pointer
        display: none !important

  &__info-container
    display: flex
    align-items: center
    justify-content: center
    position relative
    z-index 1
    gap: 14px
    width 300px
    line-height: 120%
    +above($breakpoints.sm)
      justify-content: flex-start
      width unset
      min-width: 200px
    +above($breakpoints.md)
      min-width: 238px
      gap: 20px
    +above($breakpoints.xxl)
      gap: 30px
      min-width: 284px

  &__info-box
    border: 1px solid $color-white
    border-radius: 6px
    position relative
    z-index 1
    width: 56px;
    height: 56px;
    padding: 5px;
    min-width: 56px
    +above($breakpoints.sm)
      width: 60px;
      height: 60px;
      padding: 6px;
    +above($breakpoints.md)
      border-radius: 8px
      width 80px
      height: 80px
      padding: 10px
    +above($breakpoints.xxl)
      width 101px
      height: 101px
      padding: 14px

  &__info-num
    border-radius: inherit
    background-color: $color-green-1
    display: flex
    justify-content: center
    align-items: center
    font-family: "FuturaPT-Medium"
    height: 100%
    width 100%
    line-height: 100%
    font-size: 22px
    +above($breakpoints.md)
      font-size: 28px
    +above($breakpoints.xxl)
      font-size: 34px

  &__info-pointer
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      z-index -1
      left: 0
      right 0
      top: 100%
      margin: 5px 0 0 0
    +above($breakpoints.md)
      margin: 7px 0 0 0
    +above($breakpoints.xxl)
      margin: 9px 0 0 0
    img
      height: auto
      margin: 0 auto
      width 5px
      +above($breakpoints.md)
        width 6px
      +above($breakpoints.xxl)
        width 8px

  &__frame
    position relative
    z-index 1
    background-color: $color-green-1
    overflow: hidden
    padding: 18px 5px
    +above($breakpoints.sm)
      padding: 18px 18px 26px 22px
    +above($breakpoints.md)
      padding: 24px 24px 34px 30px
    +above($breakpoints.xxl)
      padding: 40px 40px 52px 40px

  &__frame-description
    margin: 0 0 22px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: left
    +above($breakpoints.xxl)
      margin: 0 0 30px 0

  &__frame-button
    width 198px
    margin: 0 0 0 20px
    +above($breakpoints.sm)
      margin: 0
      width 198px
    +above($breakpoints.xxl)
      width 238px

  &__frame-image
    position: absolute
    z-index -1
    right: -39px;
    top: 116px;
    +above($breakpoints.sm)
      right 30px
      top: 6px
    +above($breakpoints.xxl)
      right 30px
      top: 10px
    img
      height: auto
      width 154px
      +above($breakpoints.sm)
        width 236px
      +above($breakpoints.md)
        width 284px
      +above($breakpoints.xxl)
        width 362px
