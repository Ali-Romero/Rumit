.header
  position relative
  z-index 22

  &__inner
    display: flex
    justify-content: space-between
    align-items: center
    padding: 14px 0
    +above($breakpoints.md)
      padding: 16px 0
    +above($breakpoints.xxl)
      padding: 20px 0

  &__container
    display: flex
    align-items: center
    gap: 10px
    +above($breakpoints.md)
      gap: 14px
    +above($breakpoints.xxl)
      gap: 19px

  &__logo
    img
      height: auto
      width 84px
      +above($breakpoints.sm)
        width 80px
      +above($breakpoints.md)
        width 110px
      +above($breakpoints.xxl)
        width 146px

  &__description
    display: none
    +above($breakpoints.sm)
      display: block
      border-left: 1px solid $color-blue-1
      padding: 0 0 0 18px
    +above($breakpoints.md)
      padding: 0 0 0 20px
    +above($breakpoints.xxl)
      padding: 0 0 0 28px
